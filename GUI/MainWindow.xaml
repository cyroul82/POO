<Window x:Class="GUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Background="#113C7F"
        Title="MainWindow" Height="350" Width="525">
    <Grid Margin="0 20 0 0">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Top" HorizontalAlignment="Center" >
            <Button x:Name="AddSalarieButton" Content="Ajouter" Height="30" Width="70" Click="addButton_Click" Background="#CBDFFF" BorderThickness="0" ></Button>
            <Separator Width="20" Background="Transparent"></Separator>
            <Button x:Name="RechercherButton" Content="Rechercher" Width="70" Background="#CBDFFF" BorderThickness="0"></Button>
        </StackPanel>


    </Grid>
</Window>
